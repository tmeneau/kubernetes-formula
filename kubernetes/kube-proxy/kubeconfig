apiVersion: v1
kind: Config
current-context: cluster.local
preferences: {}
clusters:
- cluster:
    {% if config.certs is defined and config.certs["ca.crt"] is defined %}
    certificate-authority: /var/lib/kube-proxy/ca.crt
    {% else %}
    insecure-skip-tls-verify: true
    {% endif %}
    server: https://{{ config.api_server.fqdn }}:{{ config.api_server.port }}
  name: cluster.local
contexts:
- context:
    cluster: cluster.local
    user: kube_proxy
  name: cluster.local
users:
- name: kube_proxy
  user:
    token: {{ config.token.kube_proxy }}